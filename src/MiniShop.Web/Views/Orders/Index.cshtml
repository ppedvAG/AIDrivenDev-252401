@{
    ViewData["Title"] = "My Orders";
}

<div class="container my-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="fw-bold">My Orders</h1>
            <p class="text-muted">Track and manage your orders</p>
        </div>
    </div>

    <!-- Orders List -->
    <div class="row">
        <div class="col-12">
            <!-- Order 1 -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <img src="https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" class="img-fluid rounded" alt="Order">
                        </div>
                        <div class="col-md-6">
                            <h5 class="fw-bold mb-1">Order #10234</h5>
                            <p class="text-muted mb-1">Placed on December 15, 2025</p>
                            <span class="badge bg-success">Delivered</span>
                        </div>
                        <div class="col-md-2 text-center">
                            <h5 class="text-primary mb-0">€45.50</h5>
                            <small class="text-muted">3 items</small>
                        </div>
                        <div class="col-md-2 text-end">
                            <a href="#" class="btn btn-sm btn-outline-secondary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order 2 -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <img src="https://images.unsplash.com/photo-1509042239860-f550ce710b93?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" class="img-fluid rounded" alt="Order">
                        </div>
                        <div class="col-md-6">
                            <h5 class="fw-bold mb-1">Order #10233</h5>
                            <p class="text-muted mb-1">Placed on December 12, 2025</p>
                            <span class="badge bg-warning text-dark">In Transit</span>
                        </div>
                        <div class="col-md-2 text-center">
                            <h5 class="text-primary mb-0">€28.99</h5>
                            <small class="text-muted">2 items</small>
                        </div>
                        <div class="col-md-2 text-end">
                            <a href="#" class="btn btn-sm btn-outline-secondary">Track Order</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order 3 -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <img src="https://images.unsplash.com/photo-1571091718767-18b5b1457add?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" class="img-fluid rounded" alt="Order">
                        </div>
                        <div class="col-md-6">
                            <h5 class="fw-bold mb-1">Order #10232</h5>
                            <p class="text-muted mb-1">Placed on December 10, 2025</p>
                            <span class="badge bg-info text-dark">Processing</span>
                        </div>
                        <div class="col-md-2 text-center">
                            <h5 class="text-primary mb-0">€67.20</h5>
                            <small class="text-muted">5 items</small>
                        </div>
                        <div class="col-md-2 text-end">
                            <a href="#" class="btn btn-sm btn-outline-secondary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Empty State (hidden when orders exist) -->
            <!-- <div class="text-center py-5">
                <h3 class="text-muted">No orders yet</h3>
                <p class="text-muted">Start shopping to see your orders here</p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-login">Browse Products</a>
            </div> -->
        </div>
    </div>
</div>
