@using MiniShop.Domain
@model Cart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="text-center">
    <h1 class="display-4">Shopping Cart</h1>
    <p>Cart ID: @Model.Id</p>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Add Item</h3>
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" name="productName" value="Coffee" required>
            </div>
            <div class="mb-3">
                <label for="productId" class="form-label">Product ID</label>
                <input type="text" class="form-control" id="productId" name="productId" value="@Guid.NewGuid()" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price (EUR)</label>
                <input type="number" class="form-control" id="price" name="price" value="2.50" step="0.01" required>
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" required>
            </div>
            <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @Html.ValidationSummary()
            </div>
        }
    </div>

    <div class="col-md-6">
        <h3>Cart Contents</h3>
        @if (Model.Items.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Your cart is empty.</p>
        }
    </div>
</div>
