@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
        <h1 class="hero-title">Your shopping deserves the best!</h1>
        <p class="hero-subtitle">FIND TRUSTED PRODUCTS, SERVICES, DEALS AND MORE.</p>

        <!-- Search Bar -->
        <div class="search-bar-container">
            <div class="search-input-group">
                <label class="search-label">SEARCH FOR</label>
                <input type="text" class="search-input" placeholder="Golden Retriever">
            </div>
            <div class="search-input-group">
                <label class="search-label">IN WHICH CATEGORY</label>
                <select class="search-input" style="background:transparent;">
                    <option>Shop Businesses</option>
                    <option>Products</option>
                    <option>Services</option>
                </select>
            </div>
            <div class="search-input-group">
                <label class="search-label">WHERE ARE YOU LOOKING</label>
                <input type="text" class="search-input" placeholder="Plovdiv, Bulgaria">
            </div>
            <button class="btn btn-search">SEARCH</button>
        </div>
    </div>
</div>

<!-- Explore Section -->
<div class="explore-section">
    <div class="container">
        <h2 class="section-title">Explore MiniShop</h2>
        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4 mb-4">
                <div class="explore-card">
                    <img src="https://images.unsplash.com/photo-1556740738-b6a63e27c4df?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="explore-card-bg" alt="Magazine">
                    <div class="explore-card-content">
                        <h3 class="card-title">Shop Magazine</h3>
                        <p class="card-subtitle">FIND INSPIRATION</p>
                        <a href="#" class="btn-card">READ NOW</a>
                    </div>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-md-4 mb-4">
                <div class="explore-card">
                    <img src="https://images.unsplash.com/photo-1521791136064-7986c2920216?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="explore-card-bg" alt="Services">
                    <div class="explore-card-content">
                        <h3 class="card-title">Shop Services</h3>
                        <p class="card-subtitle">FIND EXPERTS</p>
                        <a href="#" class="btn-card">DISCOVER NOW</a>
                    </div>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4 mb-4">
                <div class="explore-card">
                    <img src="https://images.unsplash.com/photo-1472851294608-415522f96319?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="explore-card-bg" alt="Products">
                    <div class="explore-card-content">
                        <h3 class="card-title">Shop Products</h3>
                        <p class="card-subtitle">FIND THE BEST PRODUCTS</p>
                        <a href="#" class="btn-card">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
