@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
        <h1 class="hero-title">Discover Amazing Products!</h1>
        <p class="hero-subtitle">FIND QUALITY ITEMS, GREAT DEALS, AND FAST DELIVERY.</p>

        <!-- Search Bar -->
        <div class="search-bar-container">
            <div class="search-input-group">
                <label class="search-label">SEARCH FOR</label>
                <input type="text" class="search-input" placeholder="Coffee, Tea, Mugs...">
            </div>
            <div class="search-input-group">
                <label class="search-label">IN WHICH CATEGORY</label>
                <select class="search-input" style="background:transparent;">
                    <option>All Products</option>
                    <option>Beverages</option>
                    <option>Electronics</option>
                    <option>Home & Living</option>
                </select>
            </div>
            <div class="search-input-group">
                <label class="search-label">PRICE RANGE</label>
                <select class="search-input" style="background:transparent;">
                    <option>Any Price</option>
                    <option>Under €10</option>
                    <option>€10 - €50</option>
                    <option>Over €50</option>
                </select>
            </div>
            <button class="btn btn-search">SEARCH</button>
        </div>
    </div>
</div>

<!-- Explore Section -->
<div class="explore-section">
    <div class="container">
        <h2 class="section-title">Explore MiniShop</h2>
        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4 mb-4">
                <div class="explore-card">
                    <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="explore-card-bg" alt="Products">
                    <div class="explore-card-content">
                        <h3 class="card-title">Browse Products</h3>
                        <p class="card-subtitle">DISCOVER OUR CATALOG</p>
                        <a asp-controller="Products" asp-action="Index" class="btn-card">SHOP NOW</a>
                    </div>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-md-4 mb-4">
                <div class="explore-card">
                    <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="explore-card-bg" alt="Cart">
                    <div class="explore-card-content">
                        <h3 class="card-title">My Cart</h3>
                        <p class="card-subtitle">VIEW & CHECKOUT</p>
                        <a asp-controller="Cart" asp-action="Index" class="btn-card">VIEW CART</a>
                    </div>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4 mb-4">
                <div class="explore-card">
                    <img src="https://images.unsplash.com/photo-1578575437130-527eed3abbec?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" class="explore-card-bg" alt="Orders">
                    <div class="explore-card-content">
                        <h3 class="card-title">My Orders</h3>
                        <p class="card-subtitle">TRACK YOUR PURCHASES</p>
                        <a asp-controller="Orders" asp-action="Index" class="btn-card">VIEW ORDERS</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
